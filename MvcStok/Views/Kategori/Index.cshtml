@model PagedList.IPagedList<MvcStok.Models.Entity.TBLKATEGORILER>
@using PagedList
@using PagedList.Mvc

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>KATEGORİ ID</th>
        <th>KATEGORİ ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    <tbody>
        @foreach(var item in Model)
            {
                <tr>
                    <th>@item.KATEGORIID</th>
                    <td>@item.KATEGORIAD</td>
                    <td><a href="/Kategori/Sil/@item.KATEGORIID" class="btn btn-danger">SİL</a></td>
                    <td><a href="/Kategori/KategoriGüncelle/@item.KATEGORIID" class="btn btn-success">GÜNCELLE</a></td>
                </tr>
            }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model,sayfa=>Url.Action("Index",new {sayfa}))

<a href="/Kategori/YeniKategori/" class="btn btn-primary">YENİ KATEGORİ EKLE</a>
